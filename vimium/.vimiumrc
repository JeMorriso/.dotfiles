################################################################################
# Custom key mappings
################################################################################

map h goBack 
map l goForward
map H scrollLeft
map L scrollRight

map D scrollFullPageDown
map U scrollFullPageUp

map e scrollPageUp
map E scrollFullPageUp



map gx0 closeTabsOnLeft
map gx$ closeTabsOnRight
map gxx closeOtherTabs

map t Vomnibar.activateTabSelection
map T createTab

#map b Vomnibar.activateBookmarksInNewTab
#map gb Vomnibar.activateBookmarks

